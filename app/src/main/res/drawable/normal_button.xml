<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0b3d91" />
            <gradient android:angle="-90" android:startColor="#0b3d91" android:endColor="#0b3d91"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0b3d91" />
            <solid android:color="#0b3d91"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0b3d91" />
            <gradient android:angle="-90" android:startColor="#0b3d91" android:endColor="#769fe5" />
        </shape>
    </item>
</selector>